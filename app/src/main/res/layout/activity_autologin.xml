<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="jony.trailicious_api16.AutologinActivity">

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/imgFondoAutoLogin"
        android:src="@drawable/monte_tejas"
        android:scaleType="centerCrop"
        />

    <ProgressBar
        android:id="@+id/progressAutoLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:indeterminate="true"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/txtAutoLoginCargando"
        android:layout_below="@+id/progressAutoLogin"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/trailicious_text_icons"
        android:text="Cargando..."
        />
    <TextView
        android:id="@+id/txt_titulo_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="48sp"
        android:text="@string/app_name"
        android:textColor="@color/trailicious_text"
        android:gravity="center_horizontal"
        android:layout_alignParentTop="true"
        android:layout_marginTop="8dp"
        android:background="@color/trailicious_fondo_semitransparente_blanco"
        />

</RelativeLayout>
